#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export DEB_CFLAGS_MAINT_APPEND = -DWITH_THREAD

# Ensure that we don't compile with -pthread option unnecessarily, since
# we don't make *direct* use of it in any of our code.
export CC = $(shell ./debian/pyconfig CC)
export LDSHARED = $(shell ./debian/pyconfig LDSHARED)

%:
	dh $@ --with python2 --buildsystem=pybuild

override_dh_strip:
	dh_strip --dbg-package=python-lzma-dbg

# debug package can refer to docs of depended-on binary package
override_dh_installdocs:
	dh_installdocs --link-doc=python-lzma
